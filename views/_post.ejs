
<div class="post-card">
    <hr />
    <p><%= i.content %></p>
    <p>Posted By : - <%= i.user.name %></p>
    <p>Posted At : - <%= i.createdAt %></p>
    <% if (locals.user && locals.user.id == i.user.id) { %>
        <button><a href="/posts/destroy/<%= i.id %>">Delete Post</a></button>
    <%}%>
</div>
<div class="post-comments">
    <% if(locals.user) {%>    
        <form action="/comments/create" id="new-comment-form" method="post">
            <input name="content" placeholder="Comment on this Post..." required></input>
            <input type="hidden" name="post" value="<%= i._id %>">
            <input type="submit" value="Add Comment">
        </form>
    <%}%>
    <div class="comments-container">
        <h5>Comments....</h5>
        <% for (comment of i.comments) { %> 
            
            <%- include('_comments') -%>

        <% } %>
    </div>
</div>